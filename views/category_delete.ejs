<% if (perishable_list.length > 0) { %>
<h3>
  Remove the '<%- category.title %>' category from the following perishable
  types before attempting to delete this category:
</h3>
<ul>
  <% perishable_list.forEach(p => { %>
  <li>
    <a href="<%= p.url %>"><%- p.title %></a>
  </li>
  <% }) %>
</ul>
<% } else { %>
<h3>Do you really want to delete the '<%- category.title %>' category?</h3>
<form method="POST">
  <input
    type="hidden"
    id="categoryid"
    name="categoryid"
    value="<%= category._id %>"
  />
  <button type="submit" class="btn btn-primary">Delete</button>
</form>
<% } %>
