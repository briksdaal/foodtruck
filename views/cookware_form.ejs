<form method="POST">
  <div class="form-group">
    <%- include('components/form-group-input', {item: locals.cookware, name:
    'Title', placeholder: 'Saucepan, Chef Knife, etc'}) %>
  </div>
  <div class="form-group">
    <%- include('components/form-group-input', {item: locals.cookware, name:
    'Description', placeholder: 'Description'}) %>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% if (locals.errors) { %>
<div class="form-errors">
  <ul>
    <% errors.forEach(err => { %>
    <li><%= err.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>
