<h3>Cookware Type</h3>
<p>
  <a href="<%= cookware_instance.cookware.url %>"
    ><%- cookware_instance.cookware.title %></a
  >
  <%- (cookware_instance.cookware.description) ? `-
  ${cookware_instance.cookware.description}` : '' %>
</p>
<h3>Description</h3>
<p>
  <% if (cookware_instance.description) { %> <%- cookware_instance.description
  %> <% } else { %> No Description <% } %>
</p>
<h3>Date Bought</h3>
<p>
  <% if (cookware_instance.dateBought) { %> <%=
  cookware_instance.ddmmyy_dateBought %> <% } else { %> No Date Listed <% } %>
</p>
<h3>Weight</h3>
<% if (cookware_instance.weight) { %> <%= cookware_instance.weight %> grams <% }
else { %> No Weight Listed <% } %>
<h3>Condition</h3>
<p>
  <% if (cookware_instance.condition === 'Usable') { %>
  <span class="usable"><%= cookware_instance.condition %></span>
  <% } else if (cookware_instance.condition === 'Maintenance') { %>
  <span class="maintenance"><%= cookware_instance.condition %></span>
  <% } else { %>
  <span class="not-usable"><%= cookware_instance.condition %></span>
  <% } %>
</p>

<div class="links">
  <p>
    <a href="<%= cookware_instance.url %>/delete">Delete Cookware</a>
  </p>
  <p>
    <a href="<%= cookware_instance.url %>/update">Edit Cookware</a>
  </p>
</div>
