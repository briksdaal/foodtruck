<h3>Description</h3>
<p>
  <% if (perishable_type.description) { %> <%= perishable_type.description %> <%
  } else { %> No Description <% } %>
</p>

<h3>Category</h3>
<p>
  <% if (perishable_type.category) { %>
  <a href="<%= perishable_type.category.url %>"
    ><%= perishable_type.category.title %></a
  >
  <% } else { %> No Category Defined <% } %>
</p>

<h3>Measured By</h3>
<p>
  <% if (perishable_type.measureType === 'weight') { %> Weight (grams) <% } else
  if (perishable_type.measureType === 'volume') { %> Volume (ml) %> <% } else {
  %> Units (1, 2, 3...) %> <% } %>
</p>

<h3>Usable Perishables In Stock</h3>
<%- include('components/perishableinstances', {perishables:
before_last_date_perishables, date_string: 'Use By'}) %>
<h3>Perishables Needing Disposal</h3>
<%- include('components/perishableinstances', {perishables:
after_last_date_perishables, date_string: 'Last Date Was'}) %>

<div class="links">
  <p>
    <a href="<%= perishable_type.url %>/delete">Delete Perishable Type</a>
  </p>
  <p>
    <a href="<%= perishable_type.url %>/update">Edit Perishable Type</a>
  </p>
</div>
