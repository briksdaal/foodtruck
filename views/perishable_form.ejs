<form method="POST">
  <div class="form-group">
    <%- include('components/form-group-input', {forName: 'title', label:
    'Title', placeholder: 'Title', value: locals.perishable?.title}) %>
  </div>
  <div class="form-group">
    <%- include('components/form-group-input', {forName: 'description', label:
    'Description', placeholder: 'Description', value:
    locals.perishable?.description}) %>
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <select id="category" name="category" class="form-control">
      <option value="">--Please select a category--</option>
      <% category_list.forEach(c=> { %> <% if (locals.perishable?.category &&
      perishable.category._id.toString() === c._id.toString()) {%>
      <option value="<%= c._id%>" selected><%- c.title%></option>
      <% } else {%>
      <option value="<%= c._id%>"><%- c.title%></option>
      <% } %> <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="measure-type">Measured By:</label>
    <select id="measure-type" name="measure-type" class="form-control">
      <option value="">--Please select a measurement type--</option>
      <% ['Weight', 'Volume', 'Units'].forEach(l=> { %> <% if (locals.perishable
      && perishable.measureType === l.toLowerCase()) {%>
      <option value="<%= l.toLowerCase() %>" selected><%= l%></option>
      <% } else {%>
      <option value="<%= l.toLowerCase() %>"><%= l%></option>
      <% } %> <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% if (locals.errors) { %>
<div class="form-errors">
  <ul>
    <% errors.forEach(err => { %>
    <li><%= err.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>
