<% if (recipe.image) { %>
<div class="image-container">
  <img src="<%= recipe.imagepath %>" alt="<%- recipe.title %>" />
</div>
<% } %>

<h3>Description</h3>
<p>
  <% if (recipe.description) { %> <%- recipe.description %> <% } else { %> No
  Description <% } %>
</p>

<h3>Required Cookware</h3>
<div>
  <% if (recipe.cookware && recipe.cookware.length) { %> <%-
  include('components/cookware', {cookware: recipe.cookware}) %> <% } else { %>
  None <% } %>
</div>

<h3>Ingredients</h3>
<div>
  <ul>
    <% recipe.ingredients.forEach((i) => {%>
    <li>
      <a href="<%= i.perishable.url %>"><%- i.perishable.title %></a> - <%=
      i.amount %> <%- include('components/measure', {measureType:
      i.perishable.measureType, amount: i.amount}) %>
    </li>
    <% }) %>
  </ul>
</div>

<h3>Instructions</h3>
<div><%- recipe.instructions %></div>

<div class="links">
  <p>
    <a href="<%= recipe.url %>/delete">Delete Recipe</a>
  </p>
  <p>
    <a href="<%= recipe.url %>/update">Edit Recipe</a>
  </p>
</div>
